###############################################################################
# Environment constants #######################################################
#-----------------------------------------------------------------------------#
export EDITOR=/usr/bin/vim

###############################################################################
# Aliases #####################################################################
#-----------------------------------------------------------------------------#
alias chrome='(chromium-browser --incognito &); exit'
alias fire='(firefox --private &); exit'

###############################################################################
# Shell options ###############################################################
#-----------------------------------------------------------------------------#
# History verification
shopt -s histverify
# Vi mode
set -o vi

###############################################################################
# Functions ###################################################################
#-----------------------------------------------------------------------------#
function set_window_title {
  echo -ne "\e]0;${1}\a"
}
